<%= render 'layouts/navbar' %>

<%= link_to "volver", todos_path, class: 'btn btn-success float-right' %>

<h1>Listado</h1>
<div class="row">
  <div class="col-6">
    <h4>incompletos</h4>
    <% @todos.each do |task| %>
      <% if task.completed != true %>
        <li><%= task.description %></li>
      <% end %>
    <% end %>

    </div>

    <div class="col-6"><h4>completos</h4>
      <% @todos.each do |task| %>
        <% if task.completed == true %>
          <li><%= task.description %></li>
        <% end %>
      <% end %>

    </div>
</div>
